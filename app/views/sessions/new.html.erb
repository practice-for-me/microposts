<h1>Log in</h1>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        
        <%= form_for(:session,url:login_path) do |f| %>
            <%= f.label :name %>

            <%= f.text_field :name %>


            <%= f.label :email %>
            <%= f.text_field :email %>

            <%= f.label :password %>
  
            <%= f.password_field :password %>


            <%= f.label :password_confirmation, "Confirmation"%>
  
            <%= f.password_field :password_confirmation %>
  
            <%= f.label :live_place %>
  
            <%= f.text_field :live_place %>
            
            <%= f.submit "Put my account", class: "btn btn-large btn-primary"  %>
        <% end %>
        
        <p>New user?
            <%= link_to "Sign up now!" , signup_path %>
        </p>
    </div>
</div>
