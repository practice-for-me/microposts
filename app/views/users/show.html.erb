<div class="row">
    <aside class="col-md-4">
        <section class="user_info">
            <h1>
                <%= gravatar_for @user %>
                <%= @user.name %>
                <% if !@user.live_place.blank? %>
                    </br>住所:
                    <%= @user.live_place %>
                <% end %>
            </h1>
        </section>
    </aside>
    <div class="col-md-4">
        <%= render 'follow_form' if logged_in? %>
        <% if @user.microposts.any? %>
            <h3>Microposts (<%= @user.microposts.count %>)</h3>
            <ol class="microposts">
                <%= render @microposts %>
            </ol>
        <% end %>
    </div>
    <div class="col-md-4">
        <div class="col-sm-6">
            <%= link_to 'フォロー', following_user_path %>
        </div>
        <div class="col-sm-6">
            <%= link_to 'フォロワー', follower_user_path %>
        </div>
       
    </div>
</div>